@model Slider
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1>Edit</h1>
    <div class="img-detail">
          <img class="img-fluid" src="~/img/@Model.Image"/>
    </div>
    <form class="forms-sample" accept-charset="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Choose a new image for slider</label>
            <input class="form-control" type="file" id="formFile" asp-for="Photo" >
            <span class="text-danger" asp-validation-for="Photo">@ViewBag.error</span>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button asp-action="Index" class="btn btn-dark">Cancel</button>
    </form>
    <div class="back">
        <a class="btn btn-primary btn-rounded btn-w my-5" asp-action="Index">
            Go to
 list
        </a>
    </div>
</div>

