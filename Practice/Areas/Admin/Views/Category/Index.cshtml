@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-dark">
                    <a class="btn btn-primary my-3" asp-action="Create">Create</a>

                    <thead>
                        <tr>
                            <th> Name </th>
                            <th> Operations </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Name</td>
                                <td>
                                    <a class="btn btn-outline-warning" asp-action="Detail" asp-route-id="@category.Id">Info</a>
                                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                                    <form style="display: inline-block;" method="post">
                                        <button class="btn btn-outline-danger" asp-action="SoftDelete" asp-route-id="@category.Id">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
