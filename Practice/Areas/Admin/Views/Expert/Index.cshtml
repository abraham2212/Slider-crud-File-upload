@model IEnumerable<ExpertHeader>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-dark">
                    <a class="btn btn-primary my-3" asp-action="Create">Create</a>

                    <thead>
                        <tr>
                            <th> Title </th>
                            <th> Description </th>
                            <th> Operations </th>
                        </tr>
                    </thead>
                    <tbody>
                       
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Title</td>
                                <td style="width:60px;">@item.Description</td>
                                <td>
                                    <a class="btn btn-outline-warning" asp-action="Detail" asp-route-id="@item.Id">Info</a>
                                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <form style="display: inline-block;" method="post">
                                        <button class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            }
                           
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

